        "func": "const rows = msg.payload || [];\nconst enabled = rows.length > 0 && Number(rows[0].enabled) === 1;\n\nconst response = {\n  uid: msg._uid,\n  authorized: enabled,\n  reason: enabled ? \"allowlist\" : \"not_found\",\n  ts: Math.floor(Date.now() / 1000)\n};\n\nconst logMsg = {\n  topic: \"INSERT INTO access_log (device_id, uid, authorized, reason) VALUES (?, ?, ?, ?)\",\n  payload: [msg._device_id, msg._uid, enabled ? 1 : 0, response.reason]\n};\n\nconst outMsg = { payload: response };\n\nreturn [outMsg, logMsg];\n",
